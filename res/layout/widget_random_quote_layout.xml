<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Background.Light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <TextView
                style="@style/Widget.Title.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:text="@string/widget_random_quote_txt_title" />

            <TextView
                style="@style/Widget.Subtitle.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/widget_random_quote_txt_sub_title" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/widget_random_quote_prgs_loading_new_quote"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/widget_random_quote_txt_quote"
        style="@style/Widget.Quote.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/widget_random_quote_btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/widget_random_quote_btn_refresh"
        android:visibility="gone" />

</LinearLayout>